<AnchorPane fx:id="parentAnchorPane" prefHeight="302.0" prefWidth="421.0" styleClass="parentPane" stylesheets="@create.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.kevinpita.comicstore.view.create.AuthorComicData">
    <children>
        <AnchorPane layoutX="11.0" layoutY="32.0">
            <children>
                <ComboBox fx:id="inputAuthorName" layoutX="96.0" prefHeight="25.0" prefWidth="289.0" styleClass="mediumWhiteTextField" />
                <Label layoutY="7.0" styleClass="mediumWhiteLabel" text="%selectedAuthor" />
