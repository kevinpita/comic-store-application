        </AnchorPane>
        <AnchorPane layoutX="11.0" layoutY="103.0">
            <children>
                <Label layoutY="7.0" styleClass="mediumWhiteLabel" text="%authorJob" />
                <TextField fx:id="inputAuthorLastName" layoutX="96.0" prefHeight="25.0" prefWidth="289.0" promptText="%authorJob" styleClass="mediumWhiteTextField" />
            </children>
        </AnchorPane>
        <Button fx:id="saveButton" layoutX="111.0" layoutY="173.0" mnemonicParsing="false" onAction="#save" prefHeight="40.0" prefWidth="200.0" styleClass="buttonStyle" text="%createSave" />
