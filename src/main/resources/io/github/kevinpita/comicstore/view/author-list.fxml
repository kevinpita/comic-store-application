<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="parentPane" prefHeight="600.0" prefWidth="630.0" stylesheets="@main.css" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.kevinpita.comicstore.view.AuthorListController">
    <center>
        <TableView fx:id="table" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #525252;" BorderPane.alignment="CENTER">
            <placeholder>
                <Label text="" />
            </placeholder>
            <columns>
                <TableColumn fx:id="authorNameTableColumn" minWidth="0.0" prefWidth="210.0" style="-fx-alignment: center;" text="%authorName" />
                <TableColumn fx:id="authorLastNameTableColumn" prefWidth="210.0" style="-fx-alignment: center;" text="%authorLastName" />
                <TableColumn fx:id="comicCountTableColumn" minWidth="0.0" prefWidth="210.0" style="-fx-alignment: center;" text="%authorComicCount" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
</BorderPane>
